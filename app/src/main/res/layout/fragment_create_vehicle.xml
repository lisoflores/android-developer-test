<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_car_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_car_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/car_number"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="16sp"
            android:textAllCaps="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_vehicle_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ti_car_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vehicle_type"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:focusable="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_save_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ti_vehicle_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:text="@string/save"
        android:background="@drawable/bg_btn_purple"
        android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>