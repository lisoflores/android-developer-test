<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_vehicle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="P520023"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_entry_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Entrada: 20:20"
        app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_leave_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Salida: 20:20"
        app:layout_constraintTop_toBottomOf="@+id/tv_entry_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_record_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_leave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_btn_accent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>